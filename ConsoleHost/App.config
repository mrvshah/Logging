<?xml version="1.0"?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <system.serviceModel>
    <services>
      <service name="LogWriter.ReceiverService">
        <endpoint address="msmq.formatname:DIRECT=OS:.\private$\LogMessages" binding="msmqIntegrationBinding" bindingConfiguration="LogWriterProcessorBinding" contract="LogWriter.IReceiverService"/>
      </service>
    </services>
    <bindings>
      <msmqIntegrationBinding>
        <binding name="LogWriterProcessorBinding" maxRetryCycles="1" retryCycleDelay="00:00:05" receiveRetryCount="2" deadLetterQueue="Custom" customDeadLetterQueue="msmq.formatname:DIRECT=OS:.\private$\LogMessagesDeadLetter" exactlyOnce="false">
          <security mode="None"/>
        </binding>
      </msmqIntegrationBinding>
    </bindings>
  </system.serviceModel>

  <log4net debug="true">
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="D:\\MyData\\git\\Logging\\Logs\\Log.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd"/>
      <!--<rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />-->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <layout type="log4net.Layout.PatternLayout">
        <!--
        http://logging.apache.org/log4net/release/sdk/log4net.Layout.PatternLayout.html
        
        %d = date in format e.g. 2011-11-24 15:34:08,468
        %a = appdomain e.g. ConsoleHost.vshost.exe
        %p = level e.g. INFO
        %c = class e.g. Engine.PollingServiceRunner
        %r = timestamp e.g. 265 + ms
        %l = location e.g. Engine.PollingServiceRunner.OnStart(D:\MyData\git\PollingServiceHost\Engine\PollingServiceRunner.cs:54)
        %thread = thread name e.g. Main
        %-22.22c{1} = class name e.g. PollingServiceRunner
        %-50.50M = method name e.g. LookUpServicesAndStart
        %m = message e.g. Starting service
        %n = newline
        -->
        <conversionPattern value="[%property{DateTime}] [%-5p] [%-20.20property{Application}] [%-50.50c{1}] [%-50.50thread] [%-100.100property{Method}] - [%m]%n"/>
      </layout>
    </appender>

    <root>
      <level value="DEBUG"/>
      <appender-ref ref="RollingLogFileAppender"/>
    </root>
  </log4net>

  <appSettings>
    <add key="log4net.Internal.Debug" value="true"/>
  </appSettings>

  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add name="textWriterTraceListener" type="System.Diagnostics.TextWriterTraceListener" initializeData="D:\\MyData\\git\\Logging\\Logs\\Log4NetTestLog.txt"/>
      </listeners>
    </trace>
  </system.diagnostics>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
